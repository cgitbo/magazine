/* pages/index/index.wxss */

.nav {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 99;
}

.recommend {
  margin-top: 80rpx;
  display: block;
}

.cata-log {
  border: 1px solid #000;
  padding: 10rpx 20rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  display: inline-block;
  font-size: 28rpx;
}

.loading-box {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: #fff;
}

.loading {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}