/* pages/catalog/catalog.wxss */

.container {
  padding: 20rpx;
}

.search-box {
  margin-bottom: 40rpx;
}

.tag-list {
  padding: 30rpx 0;
}

.tag-list .title {
  font-size: 40rpx;
}

.tag-list .item-box {
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tag-list .tag {
  font-size: 32rpx;
}

.my-tag {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.my-tag .tag-title {
  font-size: 40rpx;
}

.my-tag .sub-title {
  font-size: 30rpx;
}

.mark-list {
  padding: 40rpx 0;
}

.mark-list .add {
  color: #fff;
  background-color: #000;
  padding: 0 20rpx;
  display: inline-block;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}
